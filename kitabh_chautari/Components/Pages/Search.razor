@page "/search"

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Search Header -->
            <div class="text-center mb-4">
                <h1 class="display-5 fw-bold text-primary">Search Books</h1>
                <p class="text-muted">Find your next favorite book</p>
            </div>

            <!-- Search Bar -->
            <div class="input-group input-group-lg shadow-sm rounded-pill">
                <span class="input-group-text bg-white border-0 rounded-pill ps-4">
                    <i class="bi bi-search text-secondary"></i>
                </span>
                <input type="search"
                       class="form-control border-0 rounded-pill"
                       placeholder="Search by title, author, or genre..."
                       aria-label="Search books">
                <button class="btn btn-primary rounded-pill px-4" type="button">
                    Search
                </button>
            </div>

            <!-- Search Suggestions -->
            <div class="mt-3 text-center">
                <small class="text-muted">
                    Try searching for:
                    <span class="badge bg-light text-dark mx-1">fiction</span>
                    <span class="badge bg-light text-dark mx-1">non-fiction</span>
                    <span class="badge bg-light text-dark mx-1">academic books</span>
                    <span class="badge bg-light text-dark mx-1">best sellers</span>
                </small>
            </div>
        </div>
    </div>
</div>

<style>
    .rounded-pill {
        border-radius: 50rem !important;
    }

    .form-control:focus {
        box-shadow: none;
        border-color: #dee2e6;
    }

    .input-group-text {
        padding-right: 0;
    }
    /* Custom padding for search icon */
    .bi-search {
        padding-right: 0.5rem;
    }
</style>